
{%- assign inner_banner_image =  page.metafields.banner_image.inner_banner_image -%}
  {%- assign banner_overlay_enable  =  page.metafields.banner_overlay.banner_overlay_enable -%}
  {%- assign inner_title_enable  =  page.metafields.innerpage.inner_title_enable -%}

  {%- assign inner_heading  =  page.metafields.innerpage.inner_heading -%}
  {%- assign inner_sub_heading  =  page.metafields.innerpage.inner_sub_heading -%}


<section class="inner-banner">
  <div class="container inner-banner-content-box  {% if banner_overlay_enable != blank %}  overlay-banner {% endif %}"
          {% if inner_banner_image != blank %} style="background-image: url({{ inner_banner_image }});"  {% else %}  style="background-image: url({{ 'faq-banner.png' | asset_url }}"   {% endif %}>
    <div class="inner-container">
      <div class="row align-items-center">
        <div class="col">
          <h1>{{ page.title }}</h1>
        </div>
      </div>

    </div>
  </div>
</section>


<!-- /.works-area start  -->
<section class="faq-area">
  <div class="container">
    <div class="inner-container">
        {% if inner_title_enable != blank %}
          <div class="row align-items-center">
            <div class="col-12">
              <h2 class="d-inline-block clearfix mr-20">{{ inner_heading }}</h2>
              <span class="border-title"></span>
              <p class="m-0">{{ inner_sub_heading }}</p>
            </div>
          </div>
        {% endif %}


      <div class="row">
        <div class="col-12">

          <div class="questions-wrap">
            <div class="questions-box">

                {{ page.content }}
                {% if page.handle == 'faq' %}
                    {% section 'accordian' %}
                {% endif %}

                {% if page.handle == 'warranty-info' %}
                    {% section 'warranty-info' %}
                {% endif %}


            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
<!-- /.works-area start  -->